<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_Tutor">


    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/menu_lateral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="menu"
            android:textColor="@color/azul_escuro"
            android:fontFamily="sans-serif-medium">
        </TextView>


        <TextView
            android:id="@+id/hello_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E aí, usuário!"
            android:layout_marginLeft="270sp"
            android:textColor="@color/azul_escuro"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>





    <LinearLayout

        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/menu"
        android:gravity="center">



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="50sp"
            android:textColor="#033180"
            android:fontFamily="sans-serif-medium"/>

        <ImageView
            android:id="@+id/iv_patinha"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@mipmap/patinha">
        </ImageView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_title"
        android:layout_marginTop="50sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="@string/et_search" />

        <Button
            android:id="@+id/filter_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_escuro"
            android:fontFamily="sans-serif-medium"
            android:text="filtro"
            android:textColor="@color/white" />

    </LinearLayout>




        <LinearLayout
            android:id="@+id/info_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/search"
            android:layout_marginTop="30sp">

            <TextView
                android:id="@+id/name_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Sapcao - Jardins"/>


            <TextView
                android:id="@+id/localization_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_hotel"
                android:text="Jardins, São Paulo"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/patinha"/>




        </LinearLayout>


    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="40sp"></TextView>

    





</RelativeLayout>



























